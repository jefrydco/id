---
import NoteList from "@/components/widgets/NoteList.astro";
import Pagination from "@/components/widgets/Pagination.astro";
import { themeConfig } from "@/config";
import { getTranslations, type Locale } from "@/i18n";
import IndexLayout from "@/layouts/IndexLayout.astro";
import { getSortedNotesByLocale } from "@/utils/i18n-notes";
import { paginatePosts } from "@/utils/pagination";

const locale: Locale = "id";
const t = getTranslations(locale);
const allNotes = await getSortedNotesByLocale(locale);
const { posts: notes, currentPage, totalPages } = paginatePosts(allNotes, 1);

const pageTitle = `${t.ui.notes} - ${themeConfig.site.title}`;
---

<IndexLayout title={pageTitle} description={themeConfig.site.description} locale={locale}>
  <div class="notes-page" data-pagefind-ignore="all">
    <h1 class="page-title">{t.ui.notes}</h1>
    <NoteList notes={notes} locale={locale} />
    <Pagination currentPage={currentPage} totalPages={totalPages} locale={locale} basePath="/id/notes" />
  </div>
</IndexLayout>

<style>
  .notes-page {
    margin-top: 1.25rem;
  }
</style>
