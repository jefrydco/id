---
import IndexLayout from "@/layouts/IndexLayout.astro";
import TalkList from "@/components/widgets/TalkList.astro";
import Pagination from "@/components/widgets/Pagination.astro";
import { themeConfig } from "@/config";
import { getAllUniqueTalkTags, getTalksByTagGroupedByYear } from "@/utils/talk-tags";
import { defaultLocale, getTranslations } from "@/i18n";

export async function getStaticPaths() {
	const locale = defaultLocale;
	const tags = await getAllUniqueTalkTags();
	const paths = [];

	for (const tag of tags) {
		const yearGroups = await getTalksByTagGroupedByYear(tag, locale);
		const totalPages = yearGroups.length;

		for (let page = 2; page <= totalPages; page++) {
			paths.push({
				params: { tag, page: String(page) },
				props: { tag },
			});
		}
	}

	return paths;
}

const { tag } = Astro.props;
const { page } = Astro.params;
const locale = defaultLocale;
const t = getTranslations(locale);
const pageNum = parseInt(page || "1", 10);

if (pageNum === 1) {
	return Astro.redirect(`/talk/tags/${tag}/`);
}

const yearGroups = await getTalksByTagGroupedByYear(tag, locale);
const totalPages = yearGroups.length;

if (pageNum > totalPages || pageNum < 1) {
	return Astro.redirect(`/talk/tags/${tag}/`);
}

const currentYearGroup = yearGroups[pageNum - 1];
const pageTitle = `${t.ui.talksTaggedWith} "${tag}" - ${currentYearGroup.year} - ${themeConfig.site.title}`;
---

<IndexLayout title={pageTitle} description={`${t.ui.talksTaggedWith} ${tag}`} locale={locale}>
  <div class="tag-page" data-pagefind-ignore="all">
    <h1 class="page-title">{t.ui.talksTaggedWith} <span class="tag-name">"{tag}"</span></h1>
    <TalkList yearGroups={[currentYearGroup]} locale={locale} />
    <Pagination currentPage={pageNum} totalPages={totalPages} locale={locale} basePath={`/talk/tags/${tag}`} />
  </div>
</IndexLayout>

<style>
  .tag-page {
    margin-top: 1.25rem;
  }

  .page-title {
    font-size: var(--heading-1);
    font-weight: var(--font-weight-bold);
    margin: 0 0 1.5rem 0;
  }

  .tag-name {
    color: var(--text-secondary);
  }
</style>
