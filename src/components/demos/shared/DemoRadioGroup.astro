---
interface Option {
	value: string;
	label: string;
	checked?: boolean;
}

interface Props {
	name: string;
	options: Option[];
	labelId?: string;
	class?: string;
	[key: `data-${string}`]: string | number | undefined;
}

const { name, options, labelId, class: className, ...rest } = Astro.props;

const classes = ["demo-radio-group", className].filter(Boolean).join(" ");
---

<div
  class={classes}
  role="radiogroup"
  aria-labelledby={labelId}
  {...rest}
>
  {options.map((option) => (
    <label>
      <input
        type="radio"
        name={name}
        value={option.value}
        checked={option.checked}
      />
      {option.label}
    </label>
  ))}
</div>

<style>
  .demo-radio-group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .demo-radio-group label {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--font-size-s);
    color: var(--text-secondary);
    cursor: pointer;
    transition: color 0.15s ease;
  }

  .demo-radio-group label:hover {
    color: var(--text-primary);
  }

  .demo-radio-group input[type="radio"] {
    appearance: none;
    -webkit-appearance: none;
    width: 1rem;
    height: 1rem;
    border: 1.5px solid var(--text-tertiary);
    border-radius: 50%;
    background: transparent;
    cursor: pointer;
    transition: border-color 0.15s ease, background 0.15s ease;
    flex-shrink: 0;
  }

  .demo-radio-group input[type="radio"]:checked {
    border-color: var(--text-primary);
    background: var(--text-primary);
    box-shadow: inset 0 0 0 3px var(--bg);
  }

  .demo-radio-group input[type="radio"]:focus-visible {
    outline: 2px solid var(--focus);
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .demo-radio-group label,
    .demo-radio-group input[type="radio"] {
      transition: none;
    }
  }
</style>
