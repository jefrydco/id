---
interface Props {
	type?: "text" | "number";
	value?: string | number;
	placeholder?: string;
	min?: number;
	max?: number;
	step?: number;
	disabled?: boolean;
	readonly?: boolean;
	class?: string;
	id?: string;
	name?: string;
	"aria-label"?: string;
	"aria-labelledby"?: string;
	width?: "sm" | "md" | "full";
	[key: `data-${string}`]: string | number | undefined;
}

const {
	type = "text",
	value,
	placeholder,
	min,
	max,
	step,
	disabled = false,
	readonly = false,
	class: className,
	id,
	name,
	"aria-label": ariaLabel,
	"aria-labelledby": ariaLabelledby,
	width = "md",
	...rest
} = Astro.props;

const classes = ["demo-input", `demo-input--${width}`, className]
	.filter(Boolean)
	.join(" ");
---

<input
  type={type}
  value={value}
  placeholder={placeholder}
  min={min}
  max={max}
  step={step}
  disabled={disabled}
  readonly={readonly}
  class={classes}
  id={id}
  name={name}
  aria-label={ariaLabel}
  aria-labelledby={ariaLabelledby}
  {...rest}
/>

<style>
  .demo-input {
    padding: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: var(--bg);
    color: var(--text-primary);
    font-family: var(--mono);
    font-feature-settings:
      "liga" 0,
      "calt" 0;
    font-size: var(--font-size-s);
    transition: border-color 0.15s ease;
  }

  .demo-input--sm {
    width: 4rem;
  }

  .demo-input--md {
    width: 80px;
  }

  .demo-input--full {
    width: 100%;
  }

  .demo-input:focus {
    outline: 2px solid var(--focus);
    outline-offset: 2px;
  }

  .demo-input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .demo-input[readonly] {
    background: var(--code-bg);
  }

  @media (prefers-reduced-motion: reduce) {
    .demo-input {
      transition: none;
    }
  }
</style>
