---
import DemoCard from '../shared/DemoCard.astro';

interface Props {
  lang?: 'en' | 'id';
}

const { lang = 'en' } = Astro.props;

const t = {
  en: {
    title: "New Message from Boss",
    defaultContent: "Congratulations, your salary is increased next month!",
    successContent: "Next month you're the CTO ya!",
    errorContent: "Come to my desk, quick!"
  },
  id: {
    title: "Pesan Baru dari Bos",
    defaultContent: "Selamat, gaji kamu bulan depan naik!",
    successContent: "Bulan depan kamu saya angkat jadi CTO ya!",
    errorContent: "Cepat ke meja saya sekarang!"
  }
}[lang];
---

<DemoCard class="notification-demo" data-lang={lang}>
  <!-- Default notification -->
  <div class="notification notification-default">
    <div class="notification-icon">
      <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="default-a" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#2397B3" offset="0%"></stop>
            <stop stop-color="#13577E" offset="100%"></stop>
          </linearGradient>
          <linearGradient id="default-b" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#73DFF2" offset="0%"></stop>
            <stop stop-color="#47B1EB" offset="100%"></stop>
          </linearGradient>
        </defs>
        <g fill="none" fill-rule="evenodd">
          <path d="M28.872 22.096c.084.622.128 1.258.128 1.904 0 7.732-6.268 14-14 14-2.176 0-4.236-.496-6.073-1.382l-6.022 2.007c-1.564.521-3.051-.966-2.53-2.53l2.007-6.022A13.944 13.944 0 0 1 1 24c0-7.331 5.635-13.346 12.81-13.95A9.967 9.967 0 0 0 13 14c0 5.523 4.477 10 10 10a9.955 9.955 0 0 0 5.872-1.904z" fill="url(#default-a)" transform="translate(1 1)"></path>
          <path d="M35.618 20.073l2.007 6.022c.521 1.564-.966 3.051-2.53 2.53l-6.022-2.007A13.944 13.944 0 0 1 23 28c-7.732 0-14-6.268-14-14S15.268 0 23 0s14 6.268 14 14c0 2.176-.496 4.236-1.382 6.073z" fill="url(#default-b)" transform="translate(1 1)"></path>
          <path d="M18 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM24 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM30 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" fill="#FFF"></path>
        </g>
      </svg>
    </div>
    <div class="notification-content">
      <div class="notification-title">{t.title}</div>
      <div class="notification-message">{t.defaultContent}</div>
    </div>
  </div>

  <!-- Success notification -->
  <div class="notification notification-success">
    <div class="notification-icon">
      <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="success-a" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#2397B3" offset="0%"></stop>
            <stop stop-color="#13577E" offset="100%"></stop>
          </linearGradient>
          <linearGradient id="success-b" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#73DFF2" offset="0%"></stop>
            <stop stop-color="#47B1EB" offset="100%"></stop>
          </linearGradient>
        </defs>
        <g fill="none" fill-rule="evenodd">
          <path d="M28.872 22.096c.084.622.128 1.258.128 1.904 0 7.732-6.268 14-14 14-2.176 0-4.236-.496-6.073-1.382l-6.022 2.007c-1.564.521-3.051-.966-2.53-2.53l2.007-6.022A13.944 13.944 0 0 1 1 24c0-7.331 5.635-13.346 12.81-13.95A9.967 9.967 0 0 0 13 14c0 5.523 4.477 10 10 10a9.955 9.955 0 0 0 5.872-1.904z" fill="url(#success-a)" transform="translate(1 1)"></path>
          <path d="M35.618 20.073l2.007 6.022c.521 1.564-.966 3.051-2.53 2.53l-6.022-2.007A13.944 13.944 0 0 1 23 28c-7.732 0-14-6.268-14-14S15.268 0 23 0s14 6.268 14 14c0 2.176-.496 4.236-1.382 6.073z" fill="url(#success-b)" transform="translate(1 1)"></path>
          <path d="M18 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM24 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM30 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" fill="#FFF"></path>
        </g>
      </svg>
    </div>
    <div class="notification-content">
      <div class="notification-title">{t.title}</div>
      <div class="notification-message">{t.successContent}</div>
    </div>
  </div>

  <!-- Error notification -->
  <div class="notification notification-error">
    <div class="notification-icon">
      <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="error-a" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#2397B3" offset="0%"></stop>
            <stop stop-color="#13577E" offset="100%"></stop>
          </linearGradient>
          <linearGradient id="error-b" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop stop-color="#73DFF2" offset="0%"></stop>
            <stop stop-color="#47B1EB" offset="100%"></stop>
          </linearGradient>
        </defs>
        <g fill="none" fill-rule="evenodd">
          <path d="M28.872 22.096c.084.622.128 1.258.128 1.904 0 7.732-6.268 14-14 14-2.176 0-4.236-.496-6.073-1.382l-6.022 2.007c-1.564.521-3.051-.966-2.53-2.53l2.007-6.022A13.944 13.944 0 0 1 1 24c0-7.331 5.635-13.346 12.81-13.95A9.967 9.967 0 0 0 13 14c0 5.523 4.477 10 10 10a9.955 9.955 0 0 0 5.872-1.904z" fill="url(#error-a)" transform="translate(1 1)"></path>
          <path d="M35.618 20.073l2.007 6.022c.521 1.564-.966 3.051-2.53 2.53l-6.022-2.007A13.944 13.944 0 0 1 23 28c-7.732 0-14-6.268-14-14S15.268 0 23 0s14 6.268 14 14c0 2.176-.496 4.236-1.382 6.073z" fill="url(#error-b)" transform="translate(1 1)"></path>
          <path d="M18 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM24 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zM30 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" fill="#FFF"></path>
        </g>
      </svg>
    </div>
    <div class="notification-content">
      <div class="notification-title">{t.title}</div>
      <div class="notification-message">{t.errorContent}</div>
    </div>
  </div>
</DemoCard>

<style>
  .notification-demo {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .notification {
    display: flex;
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.2s;
    max-width: 32rem;
    margin: 0 auto;
    width: 100%;
  }

  .notification:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .notification-default {
    background: white;
  }

  .notification-success {
    background: #48bb78;
  }

  .notification-error {
    background: #f56565;
  }

  .notification-icon {
    flex-shrink: 0;
  }

  .notification-icon svg {
    width: 3rem;
    height: 3rem;
  }

  .notification-content {
    margin-left: 1.5rem;
    padding-top: 0.25rem;
  }

  .notification-title {
    font-size: 1.25rem;
    line-height: 1.25;
    margin-bottom: 0.25rem;
  }

  .notification-default .notification-title {
    color: #1a202c;
  }

  .notification-success .notification-title,
  .notification-error .notification-title {
    color: white;
  }

  .notification-message {
    font-size: 1rem;
    line-height: 1.5;
  }

  .notification-default .notification-message {
    color: #718096;
  }

  .notification-success .notification-message,
  .notification-error .notification-message {
    color: white;
  }

  @media (prefers-reduced-motion: reduce) {
    .notification {
      transition: none;
    }
  }
</style>
