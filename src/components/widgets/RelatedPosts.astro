---
import FormattedDate from "@/components/widgets/FormattedDate.astro";
import { getTranslations, defaultLocale, type Locale } from "@/i18n";
import { getPostSlug } from "@/utils/i18n-content";
import type { CollectionEntry } from "astro:content";

interface Props {
	posts: CollectionEntry<"blog">[];
	locale?: Locale;
}

const { posts, locale = defaultLocale } = Astro.props;
const t = getTranslations(locale);

function getPostUrl(post: CollectionEntry<"blog">): string {
	const slug = getPostSlug(post);
	return locale === "en" ? `/blog/${slug}/` : `/${locale}/blog/${slug}/`;
}
---

{
  posts.length > 0 && (
    <section class="related-posts" aria-labelledby="related-posts-heading" data-pagefind-ignore="all">
      <h2 id="related-posts-heading" class="related-posts-heading">
        {t.ui.relatedPosts}
      </h2>
      <ul class="related-posts-list">
        {posts.map((post) => (
          <li>
            <a href={getPostUrl(post)}>
              <div class="post-item">
                <p class="title">{post.data.title}</p>
                <div class="dotted-divider" />
                <p class="date font-features">
                  <FormattedDate date={post.data.publishedAt} context="list" locale={locale} />
                </p>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )
}

<style>
  .related-posts {
    margin-top: 3rem;
  }

  .related-posts-heading {
    font-size: var(--font-size-m);
    font-weight: var(--font-weight-bold);
    line-height: 1.75;
    margin: 3.75em 0 1.75em 0;
  }

  .related-posts-list {
    padding: 0;
    margin: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .related-posts-list li {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .related-posts-list li::before,
  .related-posts-list li::marker {
    display: none;
    content: none;
  }

  .related-posts-list a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  .related-posts-list a:focus-visible {
    outline: 2px solid var(--focus);
    outline-offset: 2px;
    border-radius: 0.125rem;
  }

  @media (hover: hover) and (pointer: fine) {
    .related-posts-list:hover a {
      opacity: 0.4;
    }

    .related-posts-list:hover a:hover {
      opacity: 1;
    }

    .related-posts-list:hover a:hover .dotted-divider {
      color: var(--text-secondary);
    }

    .related-posts-list:hover a:hover .date {
      color: var(--text-secondary);
      opacity: 1;
    }
  }

  .related-posts-list:has(a:focus-visible) a:not(:focus-visible):not(:hover) {
    opacity: 0.4;
  }

  .related-posts-list:has(a:focus-visible) a:focus-visible .dotted-divider {
    color: var(--text-secondary);
  }

  .related-posts-list:has(a:focus-visible) a:focus-visible .date {
    color: var(--text-secondary);
    opacity: 1;
  }

  .post-item {
    height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
  }

  .title {
    margin: 0;
    flex-shrink: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .date {
    margin: 0;
    color: var(--text-secondary);
    opacity: 0.75;
    letter-spacing: var(--spacing-s);
    flex-shrink: 0;
    white-space: nowrap;
  }

  .dotted-divider {
    flex: 1 1 3rem;
    min-width: 3rem;
    max-width: 100%;
    text-align: end;
    letter-spacing: 5px;
    height: 1.675rem;
    overflow: hidden;
    color: var(--text-tertiary);
    opacity: 0.75;
  }

  .dotted-divider::after {
    content: '·····························································································································································';
    pointer-events: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .related-posts-list a {
      transition: none;
    }
  }
</style>
