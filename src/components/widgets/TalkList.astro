---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/components/widgets/FormattedDate.astro";
import { defaultLocale, getTranslations, type Locale } from "@/i18n";
import { getTalkSlug, type TalkYearGroup } from "@/utils/i18n-talk-content";
import { formatTime } from "@/utils/time";

interface Props {
	talks: CollectionEntry<"talk">[];
	locale?: Locale;
	groupByYear?: boolean;
	yearGroups?: TalkYearGroup[];
}

const {
	talks,
	locale = defaultLocale,
	groupByYear = false,
	yearGroups,
} = Astro.props;

const t = getTranslations(locale);

function getTalkUrl(talk: CollectionEntry<"talk">): string {
	const slug = getTalkSlug(talk);
	return locale === "en" ? `/talk/${slug}/` : `/${locale}/talk/${slug}/`;
}

// Group talks by year if needed
function groupTalksByYear(
	talks: CollectionEntry<"talk">[],
): TalkYearGroup[] {
	const grouped = new Map<string, CollectionEntry<"talk">[]>();

	for (const talk of talks) {
		const year = talk.data.startDate.getFullYear().toString();
		if (!grouped.has(year)) {
			grouped.set(year, []);
		}
		grouped.get(year)!.push(talk);
	}

	return Array.from(grouped.entries())
		.map(([year, talks]) => ({ year, talks }))
		.sort((a, b) => parseInt(b.year) - parseInt(a.year));
}

const displayGroups = yearGroups || (groupByYear ? groupTalksByYear(talks) : null);
---

{displayGroups ? (
  <div class="talk-years">
    {displayGroups.map((group) => (
      <section class="year-section">
        <h2 class="year-header">
          <span class="year">{group.year}</span>
          <span class="count">({group.talks.length} {group.talks.length === 1 ? t.ui.talk : t.ui.talks})</span>
        </h2>
        <div class="talk-grid">
          {group.talks.map((talk) => (
            <article class="talk-card">
              <a href={getTalkUrl(talk)} class="talk-link">
                <div class="poster-container">
                  <Image
                    src={talk.data.poster}
                    alt={talk.data.title}
                    loading="lazy"
                    decoding="async"
                  />
                </div>
                <div class="talk-info">
                  <h3 class="talk-title">{talk.data.title}</h3>
                  <p class="talk-meta font-features">
                    <FormattedDate date={talk.data.startDate} context="list" locale={locale} />
                    <span class="time-separator">·</span>
                    <span class="talk-time">
                      {formatTime(talk.data.startDate, locale)} - {formatTime(talk.data.endDate, locale)}
                    </span>
                  </p>
                  <p class="organizer">{talk.data.organizer}</p>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    ))}
  </div>
) : (
  <div class="talk-grid">
    {talks.map((talk) => (
      <article class="talk-card">
        <a href={getTalkUrl(talk)} class="talk-link">
          <div class="poster-container">
            <Image
              src={talk.data.poster}
              alt={talk.data.title}
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="talk-info">
            <h3 class="talk-title">{talk.data.title}</h3>
            <p class="talk-meta font-features">
              <FormattedDate date={talk.data.startDate} context="list" locale={locale} />
              <span class="time-separator">·</span>
              <span class="talk-time">
                {formatTime(talk.data.startDate, locale)} - {formatTime(talk.data.endDate, locale)}
              </span>
            </p>
            <p class="organizer">{talk.data.organizer}</p>
          </div>
        </a>
      </article>
    ))}
  </div>
)}

<style>
  .talk-years {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .year-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .year-header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin: 0;
    font-size: var(--heading-3);
    font-weight: var(--font-weight-bold);
  }

  .year {
    color: var(--text-primary);
  }

  .count {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-regular);
    color: var(--text-secondary);
  }

  .talk-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2.75rem 1.5rem;
  }

  @media (min-width: 640px) {
    .talk-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .talk-card {
    transition: opacity 0.15s ease-out;
  }

  .talk-card:has(.talk-link:focus-visible) {
    outline: 2px solid var(--focus);
    outline-offset: 2px;
    border-radius: 0.25rem;
  }

  @media (hover: hover) and (pointer: fine) {
    .talk-grid:hover .talk-card {
      opacity: 0.4;
    }

    .talk-grid:hover .talk-card:hover {
      opacity: 1;
    }
  }

  .talk-grid:has(.talk-link:focus-visible) .talk-card:not(:has(.talk-link:focus-visible)) {
    opacity: 0.4;
  }

  .talk-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .talk-link:focus-visible {
    outline: none;
  }

  .poster-container {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .poster-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: var(--poster-filter);
    transition: filter 0.2s ease-out;
  }

  @media (hover: hover) and (pointer: fine) {
    .talk-card:hover .poster-container img {
      filter: none;
    }
  }

  .talk-card:has(.talk-link:focus-visible) .poster-container img {
    filter: none;
  }

  .talk-info {
    padding: 0.75rem 0 0 0;
  }

  .talk-title {
    margin: 0 0 0.25rem 0;
    font-size: var(--font-size-m);
    font-weight: var(--font-weight-bold);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .talk-meta {
    margin: 0;
    font-size: var(--font-size-s);
    color: var(--text-secondary);
    letter-spacing: var(--spacing-s);
  }

  .time-separator {
    margin: 0 0.25rem;
  }

  .talk-time {
    white-space: nowrap;
  }

  .organizer {
    margin: 0;
    font-size: var(--font-size-s);
    color: var(--text-tertiary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (prefers-reduced-motion: reduce) {
    .talk-card,
    .poster-container img {
      transition: none;
    }
  }
</style>
